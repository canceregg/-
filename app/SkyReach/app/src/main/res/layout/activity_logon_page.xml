<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="9dp"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_marginBottom="8dp"
        android:layout_width="match_parent"
        android:padding="3dp"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/back"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:src="@drawable/back1"/>
        <TextView
            android:id="@+id/logonHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="用户注册"
            android:textSize="24sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <ScrollView
            android:fillViewport="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/invitation2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:gravity="center_vertical"
                    android:text="输入昵称 "
                    android:textSize="18sp" />
                <EditText
                    android:id="@+id/logonIdText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:padding="9dp"
                    android:background="@drawable/edit_bg"
                    android:inputType="textPersonName" />

                <TextView
                    android:id="@+id/invitation1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:text="输入密码 "
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/logonPasswordText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_bg"
                    android:ems="10"
                    android:padding="9dp"
                    android:inputType="textPassword" />

                <TextView
                    android:id="@+id/surePassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:text="确认密码 "
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/surePasswordText"
                    android:layout_width="match_parent"
                    android:background="@drawable/edit_bg"
                    android:layout_height="wrap_content"
                    android:padding="9dp"
                    android:ems="10"
                    android:inputType="textPassword" />

                <TextView
                    android:id="@+id/logonEmael"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:text="输入邮箱"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/logonEmailText"
                    android:layout_width="match_parent"
                    android:padding="9dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_bg"
                    android:ems="10"
                    android:inputType="textEmailAddress" />

                <Button
                    android:id="@+id/submitBtn"
                    android:layout_marginTop="66dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_register"
                    android:text="提交" />
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</LinearLayout>