<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:padding="5dp"
        android:background="@color/colorunchecked">
        <TextView
            android:id="@+id/mimc_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/point"
            android:drawablePadding="7dp"
            android:gravity="left|center"
            android:text="MIMC"
            android:textSize="@dimen/text_size" />
        <Button
            android:id="@+id/mimc_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:background="@drawable/all_btn"
            android:gravity="center"
            android:text="@string/login"
            android:textSize="@dimen/text_size" />
        <Button
            android:id="@+id/mimc_logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="@drawable/all_btn"
            android:text="@string/logout"
            android:textSize="@dimen/text_size" />
        <Button
            android:id="@+id/mimc_sendMsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="@drawable/all_btn"
            android:text="@string/button_send"
            android:textSize="@dimen/text_size" />
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="-5dp"
        android:background="@color/colorunchecked"
        android:padding="5dp">
        <Button
            android:id="@+id/btn_p2p_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/all_btn"
            android:text="@string/p2p_history"
            android:layout_marginLeft="5dp"
            android:padding="5dp"
            android:textSize="@dimen/text_size" />
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_chat"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    </androidx.recyclerview.widget.RecyclerView>
</LinearLayout>