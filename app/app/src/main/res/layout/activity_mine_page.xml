<?xml version="1.0" encoding="utf-8"?>
<com.example.skyreach.tkrefreshlayout.TwinklingRefreshLayout android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:tr_pureScrollMode_on="true"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_marginTop="44dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_margin="3dp"
                android:layout_width="99dp"
                android:layout_height="99dp"
                android:id="@+id/head"
                android:layout_gravity="center"
                android:src="@drawable/thehead_yes"/>
            <LinearLayout
                android:layout_margin="3dp"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/nickName"
                    android:layout_marginBottom="1dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="italic|bold"
                    android:textColor="#000"
                    android:text="啦啦啦"
                    android:textSize="33dp" />
                <TextView
                    android:id="@+id/e_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="xxxxxxxx@xx.com"
                    android:textSize="16dp" />
            </LinearLayout>
        </LinearLayout>
        <Button
            android:id="@+id/inforBtn"
            android:layout_width="match_parent"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_height="60dp"
            android:layout_marginTop="33dp"
            android:background="@drawable/button_register"
            android:text="账号管理"
            android:textSize="18sp" />


        <Button
            android:layout_marginTop="33dp"
            android:id="@+id/loginOut"
            android:layout_width="match_parent"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_height="60dp"
            android:background="@drawable/button_login"
            android:text="退出登录"
            android:textSize="18sp" />
    </LinearLayout>
</com.example.skyreach.tkrefreshlayout.TwinklingRefreshLayout>
